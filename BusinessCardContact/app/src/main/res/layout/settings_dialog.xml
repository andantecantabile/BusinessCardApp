<?xml version="1.0" encoding="utf-8"?>
<!-- This custom layout is for the Edit Settings dialog where the color theme may be selected. -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/defaultDialogBg">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- Requires a radio button group for single selection -->
    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/RadioGrpSelectTheme"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RadioButton android:id="@+id/radio_color_theme_1"
            android:drawableLeft="@drawable/color_theme_preview1"
            android:drawablePadding="15dp"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_margin="10dp"
            android:text="@string/settings_color_theme_1"
            android:onClick="onColorThemeRadioBtnClicked"/>
        <RadioButton android:id="@+id/radio_color_theme_2"
            android:drawableLeft="@drawable/color_theme_preview2"
            android:drawablePadding="15dp"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_margin="10dp"
            android:text="@string/settings_color_theme_2"
            android:onClick="onColorThemeRadioBtnClicked"/>
        <RadioButton android:id="@+id/radio_color_theme_3"
            android:drawableLeft="@drawable/color_theme_preview3"
            android:drawablePadding="15dp"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_margin="10dp"
            android:text="@string/settings_color_theme_3"
            android:onClick="onColorThemeRadioBtnClicked"/>
        <RadioButton android:id="@+id/radio_color_theme_4"
            android:drawableLeft="@drawable/color_theme_preview4"
            android:drawablePadding="15dp"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_margin="10dp"
            android:text="@string/settings_color_theme_4"
            android:onClick="onColorThemeRadioBtnClicked"/>
        <RadioButton android:id="@+id/radio_color_theme_5"
            android:drawableLeft="@drawable/color_theme_preview5"
            android:drawablePadding="15dp"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_margin="10dp"
            android:text="@string/settings_color_theme_5"
            android:onClick="onColorThemeRadioBtnClicked"/>
        <RadioButton android:id="@+id/radio_color_theme_6"
            android:drawableLeft="@drawable/color_theme_preview7"
            android:drawablePadding="15dp"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_margin="10dp"
            android:text="@string/settings_color_theme_6"
            android:onClick="onColorThemeRadioBtnClicked"/>
        <RadioButton android:id="@+id/radio_color_theme_7"
            android:drawableLeft="@drawable/color_theme_preview6"
            android:drawablePadding="15dp"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_margin="10dp"
            android:text="@string/settings_color_theme_7"
            android:onClick="onColorThemeRadioBtnClicked"/>
        <RadioButton android:id="@+id/radio_color_theme_8"
            android:drawableLeft="@drawable/color_theme_preview_standard"
            android:drawablePadding="15dp"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_margin="10dp"
            android:text="@string/settings_color_theme_8"
            android:onClick="onColorThemeRadioBtnClicked"/>
    </RadioGroup>
</LinearLayout>
</ScrollView>