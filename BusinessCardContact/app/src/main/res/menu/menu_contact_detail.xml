<menu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- When the contact detail fragment is visible,
         the edit contact and delete contact options
         should be displayed in the menu. -->
    <item
        android:id="@+id/menu_item_edit_contact"
        android:icon="@android:drawable/ic_menu_edit"
        android:title="@string/menu_edit_contact"
        app:showAsAction="ifRoom"/>
    <item
        android:id="@+id/menu_item_delete_contact"
        android:icon="@android:drawable/ic_menu_delete"
        android:title="@string/menu_delete_contact"
        app:showAsAction="ifRoom"/>
</menu>