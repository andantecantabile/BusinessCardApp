<?xml version="1.0" encoding="utf-8"?>
<!-- menu for the ContactListFragment:
        "Add New Contact From Business Card" and "Add New Blank Contact" options -->
<menu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- When the contact list fragment is visible,
         the add contact and add blank contact options
         should be displayed in the menu. -->
    <item
        android:id="@+id/menu_item_new_contact_bc"
        android:icon="@drawable/ic_add_bc_white"
        android:title="@string/menu_new_business_card"
        android:orderInCategory="1"
        app:showAsAction="ifRoom"/>
    <item
        android:id="@+id/menu_item_new_blank_contact"
        android:icon="@drawable/ic_add_contact_white"
        android:title="@string/menu_new_contact"
        android:orderInCategory="2"
        app:showAsAction="ifRoom"/>
</menu>