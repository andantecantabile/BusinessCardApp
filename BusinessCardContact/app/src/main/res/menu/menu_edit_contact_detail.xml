<?xml version="1.0" encoding="utf-8"?>
<!-- menu for the EditContactDetailFragment:
        Save and Cancel options -->
<menu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- When the contact edit detail fragment is visible,
         the save contact and cancel options
         should be displayed in the menu. -->
    <item
        android:id="@+id/menu_item_save_changes"
        android:title="@string/menu_save_changes"
        app:showAsAction="always|withText"/>
    <item
        android:id="@+id/menu_item_cancel_changes"
        android:title="@string/menu_cancel_changes"
        app:showAsAction="always|withText"/>
</menu>